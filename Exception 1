public class Main {
    public static void main(String[] args) {
        int a = 70;
        int b = 0;
        // With Try:
        try {
            int c = a / b;
            System.out.println("result is " + c);
        }
        catch(Exception e) {
            System.out.println("cant divide. Reason: ");
            System.out.println(e);
        }
        System.out.println("End of program");
    }
}
